<% trail_segments.each do |segment| %>
  <li>
    <span><%= segment.start %></span>
    <span><%= segment.end %></span>
    <span><%= segment.distance %></span>
    <%= form_tag do %>
      <%= check_box_tag("", "", this_segment_hiked?(segment: segment, user: @user)) %>
      <%= SegmentConnector.matching_id(segment: segment, user: @user) %>
    <% end %>
  </li>
<% end %>
