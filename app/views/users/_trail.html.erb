<li>
  <h3>Trail: <%= trail.name %></h3>

  <table>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Distance</th>
      <th>Hiked?</th>
    </tr>
    <% trail.trail_segments.each do |segment| %>
      <tr>
        <td><%= segment.start %></td>
        <td><%= segment.end %></td>
        <td><%= segment.distance %></td>
        <td><%= this_segment_hiked?(segment: segment, user: @user) %></td>
      </tr>
    <% end %>
  </table>
</li>
